{
    "name": "hdw-werbeagentur/hdw-wordpress-theme",
    "description": "A WordPress Boilerplate Theme by HDW",
    "homepage": "https://www.hdw.dev",
    "version": "0.0.1",
    "type": "wordpress-theme",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
      {
        "name": "Anthony Spross",
        "email": "a.spross@hdw1.de",
        "homepage": "https://www.hdw1.de/agentur/unser-team/anthony-spross/"
      },
      {
        "name": "Tobias Feld",
        "email": "t.feld@hdw1.de",
        "homepage": "https://www.hdw1.de/agentur/unser-team/tobias-feld/"
      },
      {
        "name": "Sven Stuppi",
        "email": "s.stuppi@hdw1.de",
        "homepage": "https://www.hdw1.de/agentur/unser-team/sven-stuppi/"
      }
    ],
    "autoload": {
        "files": [
          "functions.helpers.php",
          "functions.custom.php"
        ]
    },
    "require": {
        "horttcore/wp-customizer": "*",
        "ralfhortt/wp-assets": "*",
        "ralfhortt/wp-template-loader": "*",
        "ralfhortt/wp-image-sizes": "*",
        "ralfhortt/wp-content-width": "*"
    },
    "scripts": {
        "post-create-project-cmd": "composer run replace-textdomain && composer run-script copy-env",
        "replace-textdomain": "if [ $(grep '^NAME' /etc/os-release) = 'NAME=\"Ubuntu\"' ]; then composer run-script initial-replace-textdomain-linux; else composer run-script initial-replace-textdomain-mac; fi",
        "replace-textdomain-mac": "DIR=$(basename $PWD); LC_ALL=C find ./ -not \\( -path \".//vendor/*\" -o -path \".//node_modules/*\" -o -path \".//.git/*\" \\) -type f \\( -iname '*.js' -o -iname '*.php' -o -iname '*.css' \\) -exec sed -i '' -e \"s/TEXTDOMAIN/${DIR}/g\" {} \\;",
        "replace-textdomain-linux": "DIR=$(basename $PWD); LC_ALL=C find ./ -not \\( -path \".//vendor/*\" -o -path \".//node_modules/*\" -o -path \".//.git/*\" \\) -type f \\( -iname '*.js' -o -iname '*.php' -o -iname '*.css' \\) -exec sed -i -e \"s/TEXTDOMAIN/${DIR}/g\" {} \\;",
        "initial-replace-textdomain": "if [ $(grep '^NAME' /etc/os-release) = 'NAME=\"Ubuntu\"' ]; then composer run-script initial-replace-textdomain-linux; else composer run-script initial-replace-textdomain-mac; fi",
        "initial-replace-textdomain-mac": "DIR=$(cat .project-name); LC_ALL=C find ./ -not \\( -path \".//vendor/*\" -o -path \".//node_modules/*\" -o -path \".//.git/*\" \\) -type f \\( -iname '*.js' -o -iname '*.php' -o -iname '*.css' \\) -exec sed -i '' -e \"s/TEXTDOMAIN/${DIR}/g\" {} \\;",
        "initial-replace-textdomain-linux": "DIR=$(cat .project-name); LC_ALL=C find ./ -not \\( -path \".//vendor/*\" -o -path \".//node_modules/*\" -o -path \".//.git/*\" \\) -type f \\( -iname '*.js' -o -iname '*.php' -o -iname '*.css' \\) -exec sed -i -e \"s/TEXTDOMAIN/${DIR}/g\" {} \\;",
        "copy-env": "cp .env.example .env",
        "add-acf-module": [
          "MODULE=$(read -p 'How should be the module named?: ' MODULENAME && echo $MODULENAME); (cd resources/modules/ && composer create-project --stability=DEV --remove-vcs hdw-werbeagentur/hdw-acf-module-boilerplate ${MODULE});"
        ]
    }
}
